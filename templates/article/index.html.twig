{% extends 'base.html.twig' %}

{% block body %}
    <div class="container px-4 py-5" id="custom-cards">
        <h2 class="pb-2 border-bottom">Publications</h2>

        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            {% for publication in publications %}
                <div class="col">
                    <a class="text-decoration-none" href="{{ path('app_article_show', {id: publication.id, slug: publication.slug}) }}">
                        <div class="card card-cover overflow-hidden rounded-4 shadow-lg" style="background-image: url('{{ publication.coverImagePath }}');">
                            <div class="publication d-flex flex-column h-100 p-5 pb-3 text-white">
                                <p class="publication-text text-danger">{{ publication.text | markdown_to_html | slice(0, 100) ~ '...'}}</p>
                                <h4 class="pt-5 {% if publication.text | length < 100 %} mt-5 {% endif %} mb-4 fw-bold text-danger">{{ publication.shortTitle }}</h4>
                                <ul class="d-flex list-unstyled mt-auto">
                                    <li class="me-auto">
                                        <img src="{{ asset('img/chat.jpg') }}" alt="Anarchat" class=" rounded-circle border border-white" width="32" height="32">
                                    </li>
                                    <li class="d-flex align-items-center me-3">
                                        <strong class="small text-white">{{ publication.categorie }}</strong>
                                    </li>
                                    <li class="d-flex align-items-center">
                                        <i class="fa-solid fa-calendar-days me-2"></i>
                                        <small>{{ publication.createdAt.format("d/m/y") }}</small>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
