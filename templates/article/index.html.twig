{% extends 'base.html.twig' %}

{% block body %}
    <div class="container px-4 py-5" id="custom-cards">
        <h2 class="pb-2 border-bottom">Publications</h2>

        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            {% for publication in publications %}
                <div class="col">
                    <a class="text-decoration-none" href="{{ path('app_article_show', {id: publication.id}) }}">
                        <div class=" card card-cover h-100 overflow-hidden rounded-4 shadow-lg" style="background-image: url('{{ asset('img/Code-travail_resistons_cnt-4d250.jpg') }}');">
                            <div class="publication d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                                <p class="publication-text text-danger">Je suis un test</p>
                                <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold text-danger">{{ publication.title }}</h3>
                                <ul class="d-flex list-unstyled mt-auto">
                                    <li class="me-auto">
                                        <img src="{{ asset('img/chat.jpg') }}" alt="Anarchat" class=" rounded-circle border border-white" width="32" height="32">
                                    </li>
                                    <li class="d-flex align-items-center me-3">
                                        <small class="text-danger">{{ publication.category | upper }}</small>
                                    </li>
                                    <li class="d-flex align-items-center">
                                        <i class="fa-solid fa-calendar-days me-2"></i>
                                        <small>{{ publication.created_at.format("d/m/y") }}</small>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
